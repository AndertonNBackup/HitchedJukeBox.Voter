<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 80%; margin-right: .5%; }
      form select { border: 0; padding: 2px; width: 9%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      .item { min-height: 100px; padding: 20px; }
      .item.artist { min-height: 200px; }
      .item:nth-child(odd) { background: #eee; }
      .item .header { display: block; margin-bottom: 25px; }
      .item .albumTitle { display: block; width: 100%; }
      .item img { float: left; margin-right: 20px; }
    </style>
<script src="/socket.io/socket.io.js"></script>
<script src="/node_dist/handlebars/dist/handlebars.runtime.min.js"></script>
<script src="/dist/js/compiled.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
  $(function () {
    var socket = io();
    var request = {
      type: '',
      search: ''
    };
    $('form').submit(function(){
      request.type = $('#type').val();
      request.search = $('#m').val();
      socket.emit('voter search', request);
      $('#m').val('');
      return false;
    });
    socket.on('voter response', function(response){
      console.log(response);
      $('#messages').html(Handlebars.partials["page/results-window"](response));
    });
  });
</script>
  </head>
  <body>
    {{{body}}}
  </body>
</html>